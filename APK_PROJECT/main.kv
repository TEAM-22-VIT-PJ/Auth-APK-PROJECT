<WelcomeScreen>
    MDFloatLayout:
        md_bg_color: "#F5F5F5"
        allow_stretch:True
        Image:
            source: "mask colored.png"   
            size_hint: 0.8, 0.8
            pos_hint: {'center_x': 0.5,'center_y': 0.6}
            halign:'center'
        MDLabel:
            text:"TEAM 22"    
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 0,0,0,1
            font_size: "34sp"
        FloatLayout:
            MDRoundFlatIconButton:
                text: "Click to start"
                icon: "star"
                pos_hint: {'center_x': .5, 'center_y': .1}
                on_press:
                    root.manager.transition.direction="left"
                    root.manager.current="login"
<LoginPage>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5,"center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        TextInput:
            id: email
            hint_text: "email"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        TextInput:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: 
                app.logger()
                root.manager.transition.direction="left"
                root.manager.current="afterlogin"
        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()
        Widget:
            size_hint_y: None
            height: 10
    MDRoundFlatButton:
        text: "REGISTER"
        font_size: 12
        pos_hint: {"center_x": 0.5,'center_y': 0.1}
        on_press:
            root.manager.transition.direction="left"
            root.manager.current="register"
