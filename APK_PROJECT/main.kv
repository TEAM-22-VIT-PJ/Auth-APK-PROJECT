<MenuScreen>:
    orientation: 'vertical'
    MDFloatLayout:
        md_bg_color: [1,1,1,1]
        allow_stretch:True
        MDBoxLayout:
            orientation:'horizontal'
            Image:
                source: "Project_sarvagya.png"
                size_hint:0.1,0.1
                pos_hint:{'center_x':.005,'center_y':.93}
                allow_stretch: True
                halign:'center'
        Image:
            source:"cycle.png"
            size_hint: 0.6,0.6
            pos_hint: {'x':0.2 , 'y':0.2 }
        MDRaisedButton:
            adaptive_size: True
            text: "choose File"
            md_bg_color:1,0.5,1,1
            icon: "upload"
            pos_hint: {'center_x': .15, 'center_y': .1}
            on_press:
                app.file_chooser()
        MDRoundFlatIconButton:
            text: "Upload File"
            icon: "send"
            pos_hint: {'center_x': .5, 'center_y': .1}
            on_press:
                print("sent")
        MDRaisedButton:
            text: "Recieve files"
            icon: "signal"
            pos_hint: {'center_x': .85, 'center_y': .1}
            on_press:
                root.manager.transition.direction="right"
                root.manager.current="upload"
<RecievedScreen>:
    BoxLayout:
        allow_stretch:True
        orientation: "horizontal"
        BoxLayout:
            Button:
                text: ''
            Button:
                text: 'Back to menu'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'
        # MDBottomAppBar